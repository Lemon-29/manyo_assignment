<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :expired %>
  <%= form.hidden_field :status %>
  <%= form.hidden_field :priority %>

  <div class="field">
    <p>title</p>
    <p><%= @task.title %></p>
    <p><span class="item_name">Task_Name</span> <%= @task.title %></p>
  </div>

  <div class="field">
    <p>内容</p>
    <p><%= @task.content %></p>
    <p>Content</p>
    <p><span class="item_name">Content</span> <%= @task.content %></p>
  </div>

  <div class="field">
    <p><span class="item_name">Status</span> <%= @task.status.status_name %></p>
  </div>

  <div class="field">
    <p><span class="item_name">Priority</span> <%= @task.priority %></p>
  </div>

  <div class="actions">
    <%= form.submit  "submit" %>
    <%= form.submit "back", name: 'back' %>